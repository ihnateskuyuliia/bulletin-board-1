<div><div>
<h1><%= @the_board.name %></h1>
</div></div>

<hr>
<div>
<h2>Add a new post</h2>
<form action="/insert_post/<%= @the_board.id %>"  method="post" >
<div>
    <label for="title_field">Title</label>
    <input type="text" id="title_field" name="title">
</div>

<div>
    <label for="body_field">Body</label>
    <textarea id="body_field" name="body" cols="30" rows="5"></textarea>
</div>

<div>
    <label for="expires_on_field">Expires on</label>
    <input type="date" id="expires_on_field" name="expires_on">
</div>

<div>
    <label for="board_id_field">Board ID</label>
    <input type="text" id="board_id_field" name="expires_on">
</div>
<button>Add post</button>

</form>
</div>

<hr>

<h2>Active posts</h2>

<% matching_posts = Post.where({ :board_id => @the_board.id}) %>
<table border="1">
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Posted on</th>
    <th>Expires on</th>
  </tr>

<% matching_posts.each do |a_post| %>
<tr>
    <td><% a_post.title %></td>
    <td><% a_post.body %></td>
    <td><% a_post.created_at %></td>
    <td><% a_post.expires_on %></td>
  </tr>
<% end %>
